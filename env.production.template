# ===========================================
# Coolify MCP Server - Production Environment Template
# ===========================================
# Copy this file to .env and update with your values

# Coolify API Configuration
COOLIFY_API_TOKEN=your_coolify_api_token_here
COOLIFY_BASE_URL=https://app.coolify.io/api/v1

# Server Configuration
NODE_ENV=production
PORT=3000

# Logging Configuration
LOG_LEVEL=info

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# Docker Compose Configuration
COMPOSE_PROJECT_NAME=coolify-mcp
COMPOSE_FILE=docker-compose.yaml

# Traefik Configuration
TRAEFIK_DOMAIN=coolify-mcp-server.SleepyStudio.xyz
TRAEFIK_ENTRYPOINT=websecure
TRAEFIK_CERT_RESOLVER=letsencrypt

# Resource Limits
MEMORY_LIMIT=512M
CPU_LIMIT=0.5
MEMORY_RESERVATION=256M
CPU_RESERVATION=0.25

# Security Configuration
SECURITY_HEADERS=true
RATE_LIMITING=true
RATE_LIMIT_BURST=100
RATE_LIMIT_AVERAGE=50

# Logging Configuration
LOG_MAX_SIZE=10m
LOG_MAX_FILES=3
LOG_DRIVER=json-file
