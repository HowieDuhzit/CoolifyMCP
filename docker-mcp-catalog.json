{
  "name": "coolifymcp",
  "displayName": "CoolifyMCP",
  "description": "A comprehensive Model Context Protocol (MCP) server that provides complete access to all Coolify API endpoints. CoolifyMCP enables AI assistants to interact with Coolify for managing applications, databases, servers, deployments, and more.",
  "version": "1.0.1",
  "author": "HowieDuhzit",
  "license": "MIT",
  "homepage": "https://github.com/howieduhzit/coolifymcp",
  "repository": {
    "type": "git",
    "url": "https://github.com/howieduhzit/coolifymcp.git"
  },
  "bugs": {
    "url": "https://github.com/howieduhzit/coolifymcp/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "coolify",
    "api",
    "deployment",
    "infrastructure",
    "docker",
    "devops",
    "ai",
    "assistant",
    "automation"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "mcp": {
    "server": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "mcp/coolifymcp:latest"
      ],
      "env": {
        "COOLIFY_API_TOKEN": "your_coolify_api_token_here",
        "COOLIFY_BASE_URL": "https://app.coolify.io/api/v1"
      }
    }
  },
  "docker": {
    "image": "mcp/coolifymcp:latest",
    "registry": "docker.io",
    "namespace": "mcp",
    "repository": "coolifymcp",
    "tag": "latest"
  },
  "installation": {
    "docker": {
      "command": "docker mcp server enable coolifymcp",
      "description": "Enable CoolifyMCP in Docker Desktop MCP Toolkit"
    },
    "manual": {
      "command": "docker run --rm -i mcp/coolifymcp:latest",
      "description": "Run CoolifyMCP manually with Docker"
    }
  },
  "configuration": {
    "required": [
      {
        "name": "COOLIFY_API_TOKEN",
        "description": "Your Coolify API token",
        "type": "string"
      }
    ],
    "optional": [
      {
        "name": "COOLIFY_BASE_URL",
        "description": "Your Coolify instance URL",
        "type": "string",
        "default": "https://app.coolify.io/api/v1"
      },
      {
        "name": "LOG_LEVEL",
        "description": "Logging level",
        "type": "string",
        "default": "info"
      }
    ]
  },
  "tools": 18,
  "api_coverage": "100%",
  "features": [
    "Complete Coolify API coverage",
    "18 consolidated tools",
    "Docker-ready deployment",
    "Health monitoring",
    "Environment variable management",
    "Multi-platform support"
  ]
}
