# Coolify MCP Server Configuration
# Copy this file to .env and update with your values

# ===========================================
# REQUIRED CONFIGURATION
# ===========================================

# Required: Your Coolify API token
# Get this from: Keys & Tokens â†’ API tokens in your Coolify dashboard
COOLIFY_API_TOKEN=your_api_token_here

# Optional: Custom Coolify instance URL
# Defaults to https://app.coolify.io/api/v1
# For self-hosted instances, use: http://your-ip:8000/api/v1
COOLIFY_BASE_URL=https://app.coolify.io/api/v1

# ===========================================
# OPTIONAL CONFIGURATION
# ===========================================

# Server Configuration
NODE_ENV=production
PORT=3000

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# API Configuration
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY=1000

# Security Configuration
ENABLE_CORS=false
CORS_ORIGIN=*

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_QUEUE_SIZE=100

# Monitoring Configuration
ENABLE_METRICS=false
METRICS_PORT=9090
